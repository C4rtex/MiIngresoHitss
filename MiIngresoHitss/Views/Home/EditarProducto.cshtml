@model MiIngresoHitss.Models.Producto

<h1>Editar Producto</h1>

<form method="post" action="@Url.Action("EditarProducto", "Home")">
    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" class="form-control" id="nombre" name="nombre" value="@Model.Nombre" />
    </div>
    <div class="form-group">
        <label for="descripcion">Descripción:</label>
        <input type="text" class="form-control" id="descripcion" name="descripcion" value="@Model.Descripcion" />
    </div>
    <div class="form-group">
        <label for="precio">Precio:</label>
        <input type="number" class="form-control" id="precio" name="precio" value="@Model.Precio" step="0.01" />
    </div>
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancelar</a>
</form>
